@page "/inputs"
@inject NavigationManager NavigationManager

<div class="row-layout inputs-container">
    <div class="column-layout column-layout_1">
        <IgbInput Label="Label/Placeholder" Outlined="false" class="input" inputs-scope>
            <span slot="prefix">
                <span class="material-icons icon">
                    person
                </span>
            </span>
            <span slot="suffix">
                <span class="material-icons icon">
                    clear
                </span>
            </span>
        </IgbInput>
        <IgbInput Label="I'm disabled" Disabled="true" Outlined="false" class="input" inputs-scope></IgbInput>
        <IgbInput Label="Label +prefix+box+help" Outlined="false" class="input" inputs-scope>
            <span slot="prefix">
                <span class="material-icons icon">
                    person
                </span>
            </span>
            <span slot="helper-text">sample hint text</span>
        </IgbInput>
        <IgbInput Label="Label/Placeholder" Outlined="false" class="input" inputs-scope></IgbInput>
        <IgbDatePicker Value="date" Label="Date-box style-input format 1" class="date-picker" inputs-scope></IgbDatePicker>
        <IgbDatePicker Value="date" Label="Date-box style - input format 2" class="date-picker" inputs-scope></IgbDatePicker>
        <span class="textarea">Textarea not yet available in Blazor</span>
        <IgbDatePicker Label="Date" class="date-picker_1" inputs-scope></IgbDatePicker>
        <div class="row-layout group">
            <IgbChip Size="SizableComponentSize.Large" class="chip" inputs-scope>
                <span slot="prefix">
                    <span class="material-icons icon_1">
                        place
                    </span>
                </span>
                Country
            </IgbChip>
            <IgbChip Size="SizableComponentSize.Large" class="chip" inputs-scope>
                <span slot="prefix">
                    <span class="material-icons icon_1">
                        place
                    </span>
                </span>
                Country
            </IgbChip>
            <IgbChip Size="SizableComponentSize.Large" class="chip_1" inputs-scope>
                <span slot="prefix">
                    <span class="material-icons icon_1">
                        account_balance
                    </span>
                </span>
                <span slot="suffix">
                    <span class="material-icons icon_1">
                        clear
                    </span>
                </span>
                Country
            </IgbChip>
            <IgbChip Disabled="true" Size="SizableComponentSize.Large" class="chip_1" inputs-scope>
                <span slot="prefix">
                    <span class="material-icons icon_1">
                        account_balance
                    </span>
                </span>
                <span slot="suffix">
                    <span class="material-icons icon_1">
                        clear
                    </span>
                </span>
                Country
            </IgbChip>
        </div>
        <IgbSlider Value="50" Disabled="true" Min="0" Max="100" PrimaryTicks="3" SecondaryTicks="2" HideSecondaryLabels="false" class="slider" inputs-scope></IgbSlider>
        <IgbSlider Value="50" Min="0" Max="100" PrimaryTicks="3" SecondaryTicks="2" TickOrientation="SliderBaseTickOrientation.Mirror" class="slider" inputs-scope></IgbSlider>
        <IgbRangeSlider Lower="20" Upper="80" Min="0" Max="100" Step="10" DiscreteTrack="true" class="range-slider" inputs-scope></IgbRangeSlider>
        <IgbRangeSlider Lower="20" Upper="80" Min="0" Max="100" PrimaryTicks="3" SecondaryTicks="1" HideSecondaryLabels="false" class="range-slider_1" inputs-scope></IgbRangeSlider>
    </div>
    <div class="column-layout group_1">
        <IgbInput Label="Label + prefix + suffix + border" Outlined="true" class="input" inputs-scope>
            <span slot="prefix">
                <p class="typography__body-2 text">
                    https://
                </p>
            </span>
            <span slot="suffix">
                <p class="typography__body-2 text">
                    .com
                </p>
            </span>
        </IgbInput>
        <IgbInput @bind-Value="value" Label="Label + required" Required="true" Outlined="true" class="input" inputs-scope></IgbInput>
        <IgbInput Label="I'm disabled" Disabled="true" Outlined="true" class="input" inputs-scope></IgbInput>
        <IgbInput Label="Label/Placeholder" Required="true" Outlined="true" class="input" inputs-scope></IgbInput>
        <IgbInput Label="Prefix, helptext and border" Outlined="true" class="input" inputs-scope>
            <span slot="prefix">
                <span class="material-icons icon">
                    person
                </span>
            </span>
            <span slot="helper-text">sample hint text</span>
        </IgbInput>
        <IgbDatePicker Label="Date" class="date-picker_1" inputs-scope></IgbDatePicker>
        <IgbDatePicker Value="date" Label="Date" class="date-picker" inputs-scope></IgbDatePicker>
        <IgbDatePicker Value="date" Label="Date" class="date-picker" inputs-scope></IgbDatePicker>
        <div class="row-layout group_2">
            <IgbButton Variant="ButtonVariant.Outlined" class="button" inputs-scope>
                <span class="material-icons">
                    add
                </span>
                <span>Button</span>
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbButton Variant="ButtonVariant.Outlined" Disabled="true" class="button" inputs-scope>
                <span class="material-icons">
                    add
                </span>
                <span>Button</span>
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbButton @onclick="@(e => Navigate("lists-data"))" class="button" inputs-scope>
                <span class="material-icons">
                    star
                </span>
                <span>Lists</span>
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbButton Variant="ButtonVariant.Flat" class="button" inputs-scope>
                <span>Button</span>
                <span class="material-icons">
                    add
                </span>
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbButton Variant="ButtonVariant.Fab" class="user-input" inputs-scope>
                <span class="material-icons">
                    add
                </span>
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbButton Variant="ButtonVariant.Flat" class="icon-button button_2" inputs-scope>
                <span class="material-icons">
                    email
                </span>
                <IgbRipple></IgbRipple>
            </IgbButton>
            <a href class="typography__body-1 hyperlink" @onclick="@(e => Navigate("charts"))">
                View charts
            </a>
        </div>
        <div class="column-layout group_3">
            <div class="row-layout group_4">
                <span class="button-group">ButtonGroup not yet available in Blazor</span>
                <IgbSwitch Checked="true" class="user-input_1" inputs-scope>
                    Notify me
                </IgbSwitch>
                <IgbSwitch Checked="true" class="user-input_1" inputs-scope></IgbSwitch>
            </div>
            <div class="row-layout group_5">
                <IgbCheckbox Checked="true" Indeterminate="false" class="checkbox" inputs-scope></IgbCheckbox>
                <IgbCheckbox LabelPosition="CheckboxBaseLabelPosition.After" Checked="true" Indeterminate="false" class="checkbox" inputs-scope>
                    Does it work?
                </IgbCheckbox>
                <IgbCheckbox LabelPosition="CheckboxBaseLabelPosition.Before" Checked="true" Indeterminate="false" class="user-input" inputs-scope>
                    How about now?
                </IgbCheckbox>
            </div>
        </div>
        <div class="row-layout group_6">
            <IgbRadioGroup class="radio-group" inputs-scope>
                <IgbRadio Value="1" class="radio" inputs-scope>
                    Label
                </IgbRadio>
                <IgbRadio Value="2" class="radio" inputs-scope>
                    Label
                </IgbRadio>
                <IgbRadio Value="3" class="radio" inputs-scope>
                    Label
                </IgbRadio>
            </IgbRadioGroup>
            <IgbRadioGroup Alignment="RadioGroupAlignment.Horizontal" class="user-input_1" inputs-scope>
                <IgbRadio Value="1" class="radio" inputs-scope>
                    Label
                </IgbRadio>
                <IgbRadio Value="2" class="radio" inputs-scope>
                    Label
                </IgbRadio>
                <IgbRadio Value="3" class="radio" inputs-scope>
                    Label
                </IgbRadio>
            </IgbRadioGroup>
        </div>
        <div class="row-layout group_7">
            <IgbInput @bind-Value="value" Label="Group name" Required="true" Outlined="true" class="input_1" inputs-scope></IgbInput>
            <IgbButton Variant="ButtonVariant.Outlined" class="button" inputs-scope>
                <span class="material-icons">
                    check
                </span>
                <span>Submit</span>
                <IgbRipple></IgbRipple>
            </IgbButton>
        </div>
        <div class="row-layout group_8">
            <IgbAvatar Initials="GM" Shape="AvatarShape.Circle" class="avatar" inputs-scope></IgbAvatar>
            <IgbAvatar Shape="AvatarShape.Circle" class="avatar" inputs-scope></IgbAvatar>
            <IgbAvatar Shape="AvatarShape.Circle" class="avatar" inputs-scope>
                <span class="material-icons">people</span>
            </IgbAvatar>
        </div>
        <div class="row-layout group_9">
            <span class="material-icons icon_2">
                person
            </span>
            <span class="material-icons icon_3">
                person
            </span>
            <span class="material-icons icon_4">
                person
            </span>
            <span class="material-icons icon_5">
                person
            </span>
        </div>
    </div>
</div>

@code {
    private DateTime date = DateTime.Parse("2021-03-16T00:00");
    private string value = "some content";
    private void Navigate(string path)
    {
        NavigationManager.NavigateTo(path);
    }
}
